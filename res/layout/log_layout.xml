<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffffd7"
                android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORD"
        android:id="@+id/wordLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:id="@+id/bookLabel"
        android:layout_below="@+id/word_etext"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAGE"
        android:id="@+id/pageLabel"
        android:layout_below="@+id/book_etext"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/word_etext"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/wordLabel"
        android:text="WORD"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/book_etext"
        android:text="NAME of BOOK"
        android:layout_alignTop="@+id/bookLabel"
        android:layout_alignStart="@+id/word_etext"/>

    <EditText
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/page_etext"
        android:layout_alignTop="@+id/pageLabel"
        android:layout_alignStart="@+id/book_etext"
        android:text="PAGE"/>

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/page_etext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>